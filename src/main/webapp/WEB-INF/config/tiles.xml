<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
 
    <definition name="base.definition" template="/WEB-INF/views/mainTemplate.jsp">
        <put-attribute name="title" value=""></put-attribute>
        <put-attribute name="header" value="/WEB-INF/views/header.jsp"></put-attribute>
        <put-attribute name="alerts" value="/WEB-INF/views/alerts.jsp"></put-attribute>
        <put-attribute name="body" value=""></put-attribute>
        <put-list-attribute name="stylesheets">
          <add-attribute value="/static/css/style.css" />
          <add-attribute value="/static/css/bootstrap.min.css" />
        </put-list-attribute>
        <put-list-attribute name="javascripts">
          <add-attribute value="/static/js/jquery-3.3.1.slim.min.js" />
          <add-attribute value="/static/js/popper.min.js" />
          <add-attribute value="/static/js/bootstrap.min.js" />
          <add-attribute value="/static/js/header.js" />
        </put-list-attribute>
    </definition>
 
    <definition name="home" extends="base.definition">
        <put-attribute name="refId" value="homeRef"></put-attribute>
        <put-attribute name="title" value="Home"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"></put-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/home.css" />
        </put-list-attribute>
    </definition>
    
    <definition name="account" extends="base.definition">
        <put-attribute name="refId" value="accountRef"></put-attribute>
        <put-attribute name="title" value="Account"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/account.jsp"></put-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/account.css" />
        </put-list-attribute>
    </definition>
    
	<definition name="match" extends="base.definition">
	    <put-attribute name="refId" value="matchRef"></put-attribute>
		<put-attribute name="title" value="Match"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/match.jsp"></put-attribute>
		<put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/match.css" />
        </put-list-attribute>
	</definition>

	<definition name="team" extends="base.definition">
	    <put-attribute name="refId" value="teamRef"></put-attribute>
		<put-attribute name="title" value="Team"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/team.jsp"></put-attribute>
		<put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/team.css" />
        </put-list-attribute>
	</definition>
	
	<definition name="playerInfo" extends="base.definition">
	    <put-attribute name="refId" value="teamRef"></put-attribute>
		<put-attribute name="title" value="PlayerInfo"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/views/playerInfo.jsp"></put-attribute>
	</definition>
	
	<definition name="playerTrain" extends="base.definition">
	    <put-attribute name="refId" value="teamRef"></put-attribute>
		<put-attribute name="title" value="PlayerTrain"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/views/playerTrain.jsp"></put-attribute>
	</definition>
	
	<definition name="register" extends="base.definition">
	    <put-attribute name="refId" value="homeRef"></put-attribute>
        <put-attribute name="title" value="Register"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/register.jsp"></put-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/register.css" />
        </put-list-attribute>
    </definition>
	
</tiles-definitions>