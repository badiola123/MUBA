<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="base.definition" template="/WEB-INF/views/mainTemplate.jsp">
        <put-attribute name="title" value=""></put-attribute>
        <put-attribute name="header" value="/WEB-INF/views/header.jsp"></put-attribute>
        <put-attribute name="alerts" value="/WEB-INF/views/alerts.jsp"></put-attribute>
        <put-attribute name="body" value=""></put-attribute>
        <put-list-attribute name="stylesheets">
          <add-attribute value="/static/css/style.css" />
          <add-attribute value="/static/css/bootstrap.min.css" />
        </put-list-attribute>
        <put-list-attribute name="javascripts">
          <add-attribute value="/static/js/jquery-3.3.1.slim.min.js" />
          <add-attribute value="/static/js/popper.min.js" />
          <add-attribute value="/static/js/bootstrap.min.js" />
        </put-list-attribute>
    </definition>
 
    <definition name="home" extends="base.definition">
        <put-attribute name="title" value="Home"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"></put-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/home.css" />
        </put-list-attribute>
    </definition>
    
    <definition name="account" extends="base.definition">
        <put-attribute name="title" value="Account"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/account.jsp"></put-attribute>
        <put-list-attribute name="stylesheets" inherit="true">
          <add-attribute value="/static/css/account.css" />
        </put-list-attribute>
    </definition>
 
</tiles-definitions>